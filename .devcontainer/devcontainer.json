{
  "name": "Payments System",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:20",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": false
    }
  },
  "workspaceFolder": "/workspaces/payments-api",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/payments-api,type=bind",
  "postCreateCommand": "bash .devcontainer/setup.sh",
  "postAttachCommand": "code --reuse-window /workspaces/payments-api/payments-system.code-workspace || true",
  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": {
      "label": "Payments UI",
      "onAutoForward": "notify"
    },
    "3001": {
      "label": "Payments API",
      "onAutoForward": "ignore",
      "visibility": "private"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  }
}
